{
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2017
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "extends": [
      "airbnb-base", 
      "plugin:vue/essential"   
    ],
    "plugins": [
      "vue"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack.common.js"  
        }
      }
    },
    "rules": {
      "no-shadow": [0, { "allow": ["state"] }],
      "no-param-reassign": 0,
      "arrow-body-style": 0,
      "no-plusplus" : 0
    }
  }